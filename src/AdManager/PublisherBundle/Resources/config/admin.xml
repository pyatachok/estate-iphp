<!-- AdManagerPublisherBundle/Resources/config/admin.xml -->
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sonata.admin.tag" class="AdManager\PublisherBundle\Admin\TagAdmin">
            <tag name="sonata.admin" manager_type="orm" group="Объявления" label="Редакторы"/>
            <argument />
            <argument>AdManager\PublisherBundle\Entity\Publisher</argument>
            <argument>SonataAdminBundle:CRUD</argument>

            <call method="setUserManager">
                  <argument type="service" id="fos_user.user_manager"/>
            </call>
        </service>
    </services>
</container>